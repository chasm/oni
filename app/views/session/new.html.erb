<h1>Oni</h1>

<!-- Creates a form based on the User model -->
<%= form_for :user do |f| %>
  <fieldset>
    <legend>Please log in</legend>
    <div class="form-group">
      <%= f.text_field :email %>
    </div>
    <div class="form-group">
      <%= f.password_field :password %>
    </div>
    <div class="form-group">
      <%= f.submit "Log in" %>
    </div>
  </fieldset>
<% end %>
